<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipal_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imbHistoria"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cor_fundo"
                android:onClick="abrir_Historia"
                android:src="@drawable/hist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="História"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imbArmaduras"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cor_fundo"
                android:onClick="abrir_Armaduras"
                android:src="@drawable/pers_ne" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personagens"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imbJarvis"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cor_fundo"
                android:onClick="abrir_Jarvis"
                android:src="@drawable/pers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transformações"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imbPepper"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cor_fundo"
                android:onClick="abrir_Pepper"
                android:src="@drawable/sagas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sagas"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imb_EmpresaS"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cor_fundo"
                android:onClick="abrir_EmpresaS"
                android:src="@drawable/omn_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Omnitrix"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/cor_fundo"
                android:src="@drawable/enc" />

            <TextView
                android:id="@+id/imb_Vingadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="abrir_Vingadores"
                android:text="Curiosidades"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>